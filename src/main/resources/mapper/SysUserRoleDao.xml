<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.atp.dao.sys.SysUserRoleDao">

    <resultMap id="SysUserRoleMap" type="com.atp.dto.sys.SysUserRoleDTO">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="roleCode" column="role_code"/>

        <!--拓展属性-->
        <result property="roleCodes" column="roleCodes"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        	id ,
        	user_id ,
        	role_code 
        ]]>
    </sql>
    
    <sql id="where">
    	<where>
           	<if test="@Ognl@isNotEmpty(id)">
            	<![CDATA[ AND id = #{id} ]]>
            </if>
           	<if test="@Ognl@isNotEmpty(userId)">
            	<![CDATA[ AND user_id = #{userId} ]]>
            </if>
           	<if test="@Ognl@isNotEmpty(roleCode)">
            	<![CDATA[ AND role_code = #{roleCode} ]]>
            </if>
        </where>
    </sql>
    

    <select id="queryList" resultMap="SysUserRoleMap">
        SELECT
            <include refid="columns" />
        FROM
            sys_user_role 
        <include refid="where"/>
    </select>
        

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
	    INSERT INTO sys_user_role (
	        user_id,
	        role_code
	    ) VALUES (
	        #{userId},
	        #{roleCode}
	    )
    </insert>

    <insert id="saveBatch">
        INSERT INTO sys_user_role (
            user_id,
            role_code
        ) VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (
                                #{item.userId},
                #{item.roleCode}
            )
        </foreach>
    </insert>
    

    <delete id="deleteBatchByIds">
        DELETE 
        FROM
            sys_user_role
        WHERE
            id IN
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
#{item}        </foreach>
    </delete>



    <update id="updateById">
            UPDATE
            sys_user_role
            <set>
                    <if test="userId != null">
                        <![CDATA[ user_id = #{userId} ]]>,
                     </if>
                    <if test="roleCode != null">
                        <![CDATA[ role_code = #{roleCode} ]]>
                     </if>
            </set>
            <where>
                id = #{id}
        </where>
        </update>

    <select id="getListByUserId" resultMap="SysUserRoleMap">
        SELECT
        <include refid="columns" />
        FROM
        sys_user_role
        <where>
            user_id = #{userId}
        </where>
    </select>
    <delete id="delByUserId" >
        DELETE
        FROM
            sys_user_role
        WHERE
            user_id #{userId}
    </delete>
    
    <select id="getUserGroupRoleList" resultMap="SysUserRoleMap">
      SELECT user_id,group_concat(role_code) AS roleCodes
      FROM
    sys_user_role
    GROUP by user_id
    </select>
</mapper>

