<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.atp.dao.sys.SysMenuDao">

    <resultMap id="SysMenuMap" type="org.atp.dto.sys.SysMenuDTO">
        <result property="id" column="id"/>
        <result property="url" column="url"/>
        <result property="path" column="path"/>
        <result property="component" column="component"/>
        <result property="name" column="name"/>
        <result property="iconCls" column="iconCls"/>
        <result property="keepAlive" column="keepAlive"/>
        <result property="requireAuth" column="requireAuth"/>
        <result property="parentId" column="parentId"/>
        <result property="enabled" column="enabled"/>
        <result property="menuType" column="menu_type"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        	id ,
        	url ,
        	path ,
        	component ,
        	name ,
        	iconCls ,
        	keepAlive ,
        	requireAuth ,
        	parentId ,
        	enabled ,
        	menu_type 
        ]]>
    </sql>
    
    <sql id="where">
    	<where>
           	<if test="@Ognl@isNotEmpty(id)">
            	<![CDATA[ AND id = #{id} ]]>
            </if>
           	<if test="@Ognl@isNotEmpty(url)">
            	<![CDATA[ AND url = #{url} ]]>
            </if>
           	<if test="@Ognl@isNotEmpty(path)">
            	<![CDATA[ AND path = #{path} ]]>
            </if>
           	<if test="@Ognl@isNotEmpty(component)">
            	<![CDATA[ AND component = #{component} ]]>
            </if>
           	<if test="@Ognl@isNotEmpty(name)">
            	<![CDATA[ AND name = #{name} ]]>
            </if>
           	<if test="@Ognl@isNotEmpty(iconCls)">
            	<![CDATA[ AND iconCls = #{iconCls} ]]>
            </if>
           	<if test="@Ognl@isNotEmpty(keepAlive)">
            	<![CDATA[ AND keepAlive = #{keepAlive} ]]>
            </if>
           	<if test="@Ognl@isNotEmpty(requireAuth)">
            	<![CDATA[ AND requireAuth = #{requireAuth} ]]>
            </if>
           	<if test="@Ognl@isNotEmpty(parentId)">
            	<![CDATA[ AND parentId = #{parentId} ]]>
            </if>
           	<if test="@Ognl@isNotEmpty(enabled)">
            	<![CDATA[ AND enabled = #{enabled} ]]>
            </if>
           	<if test="@Ognl@isNotEmpty(menuType)">
            	<![CDATA[ AND menu_type = #{menuType} ]]>
            </if>
        </where>
    </sql>
    

    <select id="queryList" resultMap="SysMenuMap">
        SELECT
            <include refid="columns" />
        FROM
            sys_menu 
        <include refid="where"/>
    </select>
        

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
	    INSERT INTO sys_menu (
	        url,
	        path,
	        component,
	        name,
	        iconCls,
	        keepAlive,
	        requireAuth,
	        parentId,
	        enabled,
	        menu_type
	    ) VALUES (
	        #{url},
	        #{path},
	        #{component},
	        #{name},
	        #{iconCls},
	        #{keepAlive},
	        #{requireAuth},
	        #{parentId},
	        #{enabled},
	        #{menuType}
	    )
    </insert>

    <insert id="saveBatch">
        INSERT INTO sys_menu (
            url,
            path,
            component,
            name,
            iconCls,
            keepAlive,
            requireAuth,
            parentId,
            enabled,
            menu_type
        ) VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (
                                #{item.url},
                #{item.path},
                #{item.component},
                #{item.name},
                #{item.iconCls},
                #{item.keepAlive},
                #{item.requireAuth},
                #{item.parentId},
                #{item.enabled},
                #{item.menuType}
            )
        </foreach>
    </insert>
    

    <delete id="deleteBatchByIds">
        DELETE 
        FROM
            sys_menu
        WHERE
            id IN
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
#{item}        </foreach>
    </delete>



    <update id="updateById">
            UPDATE
            sys_menu
            <set>
                    <if test="url != null">
                        <![CDATA[ url = #{url} ]]>,
                     </if>
                    <if test="path != null">
                        <![CDATA[ path = #{path} ]]>,
                     </if>
                    <if test="component != null">
                        <![CDATA[ component = #{component} ]]>,
                     </if>
                    <if test="name != null">
                        <![CDATA[ name = #{name} ]]>,
                     </if>
                    <if test="iconCls != null">
                        <![CDATA[ iconCls = #{iconCls} ]]>,
                     </if>
                    <if test="keepAlive != null">
                        <![CDATA[ keepAlive = #{keepAlive} ]]>,
                     </if>
                    <if test="requireAuth != null">
                        <![CDATA[ requireAuth = #{requireAuth} ]]>,
                     </if>
                    <if test="parentId != null">
                        <![CDATA[ parentId = #{parentId} ]]>,
                     </if>
                    <if test="enabled != null">
                        <![CDATA[ enabled = #{enabled} ]]>,
                     </if>
                    <if test="menuType != null">
                        <![CDATA[ menu_type = #{menuType} ]]>
                     </if>
            </set>
            <where>
                id = #{id}
        </where>
        </update>
</mapper>

