<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.atp.dao.sys.SysUserPermissionDao">

    <resultMap id="SysUserPermissionMap" type="org.atp.dto.sys.SysUserPermissionDTO">
        <result property="id" column="id"/>
        <result property="userId" column="user_id"/>
        <result property="menuId" column="menu_id"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        	id ,
        	user_id ,
        	menu_id 
        ]]>
    </sql>
    
    <sql id="where">
    	<where>
           	<if test="@Ognl@isNotEmpty(id)">
            	<![CDATA[ AND id = #{id} ]]>
            </if>
           	<if test="@Ognl@isNotEmpty(userId)">
            	<![CDATA[ AND user_id = #{userId} ]]>
            </if>
           	<if test="@Ognl@isNotEmpty(menuId)">
            	<![CDATA[ AND menu_id = #{menuId} ]]>
            </if>
        </where>
    </sql>
    

    <select id="queryList" resultMap="SysUserPermissionMap">
        SELECT
            <include refid="columns" />
        FROM
            sys_user_permission 
        <include refid="where"/>
    </select>
        

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
	    INSERT INTO sys_user_permission (
	        user_id,
	        menu_id
	    ) VALUES (
	        #{userId},
	        #{menuId}
	    )
    </insert>

    <insert id="saveBatch">
        INSERT INTO sys_user_permission (
            user_id,
            menu_id
        ) VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (
                                #{item.userId},
                #{item.menuId}
            )
        </foreach>
    </insert>
    

    <delete id="deleteBatchByIds">
        DELETE 
        FROM
            sys_user_permission
        WHERE
            id IN
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
#{item}        </foreach>
    </delete>



    <update id="updateById">
            UPDATE
            sys_user_permission
            <set>
                    <if test="userId != null">
                        <![CDATA[ user_id = #{userId} ]]>,
                     </if>
                    <if test="menuId != null">
                        <![CDATA[ menu_id = #{menuId} ]]>
                     </if>
            </set>
            <where>
                id = #{id}
        </where>
        </update>
</mapper>

