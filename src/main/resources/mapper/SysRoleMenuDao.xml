<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.atp.dao.sys.SysRoleMenuDao">

    <resultMap id="SysRoleMenuMap" type="com.atp.dto.sys.SysRoleMenuDTO">
        <result property="id" column="id"/>
        <result property="roleCode" column="role_code"/>
        <result property="menuId" column="menu_id"/>
    </resultMap>
    
    <sql id="columns">
        <![CDATA[
        	id ,
        	role_code ,
        	menu_id 
        ]]>
    </sql>
    
    <sql id="where">
    	<where>
           	<if test="@Ognl@isNotEmpty(id)">
            	<![CDATA[ AND id = #{id} ]]>
            </if>
           	<if test="@Ognl@isNotEmpty(roleCode)">
            	<![CDATA[ AND role_code = #{roleCode} ]]>
            </if>
           	<if test="@Ognl@isNotEmpty(menuId)">
            	<![CDATA[ AND menu_id = #{menuId} ]]>
            </if>
        </where>
    </sql>
    

    <select id="queryList" resultMap="SysRoleMenuMap">
        SELECT
            <include refid="columns" />
        FROM
            sys_role_menu 
        <include refid="where"/>
    </select>
        

    <insert id="save" useGeneratedKeys="true" keyProperty="id">
	    INSERT INTO sys_role_menu (
	        role_code,
	        menu_id
	    ) VALUES (
	        #{roleCode},
	        #{menuId}
	    )
    </insert>

    <insert id="saveBatch">
        INSERT INTO sys_role_menu (
            role_code,
            menu_id
        ) VALUES
        <foreach collection="list" item="item" index="index" separator=",">
            (
                                #{item.roleCode},
                #{item.menuId}
            )
        </foreach>
    </insert>
    

    <delete id="deleteBatchByIds">
        DELETE 
        FROM
            sys_role_menu
        WHERE
            id IN
        <foreach collection="list" index="index" item="item" open="(" separator="," close=")">
#{item}        </foreach>
    </delete>



    <update id="updateById">
            UPDATE
            sys_role_menu
            <set>
                    <if test="roleCode != null">
                        <![CDATA[ role_code = #{roleCode} ]]>,
                     </if>
                    <if test="menuId != null">
                        <![CDATA[ menu_id = #{menuId} ]]>
                     </if>
            </set>
            <where>
                id = #{id}
        </where>
        </update>
    
    <delete id="deleteByRoleCode">
          DELETE
        FROM
            sys_role_menu
        WHERE role_code = #{roleCode}
    </delete>
</mapper>

